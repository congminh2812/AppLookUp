@model TypeInfo

@{
    ViewData["Title"] = "Loại thông tin";
}

<form method="post" asp-action="Upsert">
    <div class="border p-3 mt-4 row">
        <div class="col-12 pb-2">
            <h2 class="text-primary">@(Model.Id is 0 ? "Tạo" : "Chỉnh sửa") loại thông tin</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <input asp-for="Id" hidden />
        <div class="mb-3 col-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
      
        <div class="col-12">
            @if (Model.Id is 0)
            {
                <button type="submit" class="btn btn-primary" style="width: 150px;">Lưu</button>
            }
            else
            {
                <button type="submit" class="btn btn-primary" style="width: 150px;">Cập nhật</button>
            }
            <a asp-controller="TypeInfo" asp-action="Index" class="btn btn-secondary" style="width: 200px;">Trờ về danh sách</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}