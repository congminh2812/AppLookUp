@model IEnumerable<Information>

@{
    ViewData["Title"] = "Thông tin";
}

<div class="card border-primary mt-3">
    <div class="card-header">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">Danh sách thông tin</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Information" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    Thêm
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="tblData" class="table table-bordered table-striped" style="width: 100%;">
            <thead>
                <tr>
                    <th>Tên</th>
                    <th>Loại</th>
                    <th>Nội dung</th>
                    <th></th>
                </tr>
            </thead>
        </table>

    </div>
</div>

@section Scripts{
    <script src="~/js/information.js"></script>
}