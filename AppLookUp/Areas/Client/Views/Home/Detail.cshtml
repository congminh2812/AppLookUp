@{
    ViewData["Title"] = "Chi tiết";
}

<div class="container mt-5">
    <div class="row d-flex justify-content-center ">
        <div class="col-md-12">
            <div class="card" >
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="card-title mb-0">
                        <h3 class="card-label mb-0">Thông tin chi tiết</h3>
                    </div>
                    <div class="card-toolbar">
                        <a asp-area="Client" asp-controller="Home" asp-action="Index" class="btn btn-primary">Quay lại</a>
                    </div>
                </div>
                <div class="card-body" style="min-height: 400px;">
                    <div id="loading" class="loading d-flex justify-content-center align-items-center hidden">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <div id="content"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/client/information-detail.js"></script>
}